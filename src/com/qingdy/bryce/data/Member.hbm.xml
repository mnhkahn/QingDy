<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.qingdy.bryce.data.Member" table="MEMBER">
    <id name="uid" type="int" column="TRACK_ID">
      <meta attribute="scope-set">protected</meta>
      <generator class="native" />
    </id>

    <property name="username" type="string" not-null="true" />
    
    <property name="password" type="string" not-null="true" />
    
    <property name="groupid" type="int" not-null="true" />
    
    <property name="lastname" type="string" />
    
    <property name="firstname" type="string" not-null="true" />
    
    <property name="gender" type="int" not-null="true" />
    
    <property name="icon" type="string" not-null="true" />
    
    <property name="phone" type="string" not-null="true" />
    
    <property name="qq" type="string" />
    
    <property name="msn" type="string" />
    
    <property name="site" type="string" />
    
    <property name="email" type="string" />    
    
    <property name="signature" type="string" />
    
    <property name="introduce" type="string" />
    
    <property name="location" type="string" />
    
    <property name="birthday" type="date" />
    
    <property name="regdate" type="date" not-null="true" />
    
    <property name="verify" type="int" not-null="true" />
    
  </class>
</hibernate-mapping>