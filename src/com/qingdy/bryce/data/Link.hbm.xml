<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.qingdy.bryce.data.Link" table="LINK">
    <id name="lid" type="int" column="LINK_ID">
      <meta attribute="scope-set">protected</meta>
      <generator class="native" />
    </id>

    <property name="name" type="string" not-null="true" />
    
    <property name="site" type="string" not-null="true" />
    
    <property name="introduce" type="int" />
    
    <property name="sort" type="int" not-null="true" />
    
  </class>
</hibernate-mapping>