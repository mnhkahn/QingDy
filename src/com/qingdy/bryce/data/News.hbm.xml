<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.qingdy.bryce.data.News" table="NEWS">
    <id name="nid" type="int" column="NEWS_ID">
      <meta attribute="scope-set">protected</meta>
      <generator class="native" />
    </id>

    <property name="title" type="string" not-null="true" />
    
    <property name="text" type="string" not-null="true" />
    
    <property name="uid" type="int" not-null="true" />
    
    <property name="class" type="int" not-null="true" />
    
    <property name="postdate" type="date" not-null="true" />
    
  </class>
</hibernate-mapping>