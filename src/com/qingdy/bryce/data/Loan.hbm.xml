<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.qingdy.bryce.data.Loan" table="LOAN">
    <id name="lid" type="int" column="LOAN_ID">
      <meta attribute="scope-set">protected</meta>
      <generator class="native" />
    </id>

    <property name="uid" type="int" not-null="true" />
    
    <property name="amount" type="float" not-null="true" />
    
    <property name="deadline" type="string" />
    
    <property name="usesofloan" type="string" />
    
    <property name="lendtype" type="string" not-null="true" />
    
    <property name="haspawn" type="int" />
    
    <property name="pawn" type="string" not-null="true" />
    
    <property name="title" type="string" not-null="true" />
    
    <property name="introduce" type="string" not-null="true" />
    
    <property name="r_num" type="int" not-null="true" />
    
    <property name="location" type="string" not-null="true" />
    
    <property name="postdate" type="date" not-null="true" />
    
    <property name="verify" type="int" not-null="true" />
    
  </class>
</hibernate-mapping>