<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.qingdy.bryce.data.Mall" table="MESSAGE">
    <id name="mid" type="int" column="MESSAGE_ID">
      <meta attribute="scope-set">protected</meta>
      <generator class="native" />
    </id>

    <property name="fromuid" type="int" not-null="true" />
    
    <property name="touid" type="int" not-null="true" />
    
    <property name="title" type="string" not-null="true" />
    
    <property name="message" type="string" not-null="true" />
    
    <property name="postdate" type="date" not-null="true" />
    
    <property name="isreaded" type="int" not-null="true" />
    
  </class>
</hibernate-mapping>