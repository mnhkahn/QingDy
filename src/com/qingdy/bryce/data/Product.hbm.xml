<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="com.qingdy.bryce.data.Product" table="PRODUCT">
    <id name="pid" type="int" column="PRODUCT_ID">
      <meta attribute="scope-set">protected</meta>
      <generator class="native" />
    </id>

    <property name="uid" type="int" not-null="true" />
    
    <property name="mid" type="string" not-null="true" />
    
    <property name="pname" type="string" not-null="true" />
    
    <property name="max" type="int" not-null="true" />
    
    <property name="min" type="int" not-null="true" />
    
    <property name="ratetype" type="string" not-null="true" />
    
    <property name="rate" type="float" />
    
    <property name="deadline" type="string" not-null="true" />
    
    <property name="clientlocation" type="string" not-null="true" />
    
    <property name="client" type="string" not-null="true" />
    
    <property name="repaymentmethod" type="string" not-null="true" />
    
    <property name="ptype" type="string" not-null="true" />
    
    <property name="usesofloan" type="string" not-null="true" />
    
    <property name="intruduce" type="string" not-null="true" />
    
    <property name="processes" type="string" />
    
    <property name="application" type="string" />
    
    <property name="faq" type="string" />
    
    <property name="r_num" type="int" />
    
    <property name="postdate" type="date" />
    
    <property name="verify" type="int" />
    
  </class>
</hibernate-mapping>